<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="PreProcessorToLower" class="edu.school21.preprocessor.PreProcessorToLowerImpl"/>
    <bean id="PreProcessorToUpper" class="edu.school21.preprocessor.PreProcessorToUpperImpl"/>


    <bean id="RendererErrImplToLower" class="edu.school21.renderer.RendererErrImpl">
        <constructor-arg type="PreProcessor" ref="PreProcessorToLower"/>
    </bean>

    <bean id="RendererErrImplToUpper" class="edu.school21.renderer.RendererErrImpl">
        <constructor-arg type="PreProcessor" ref="PreProcessorToUpper"/>
    </bean>

    <bean id="RendererStandardImplToLower" class="edu.school21.renderer.RendererStandardImpl">
        <constructor-arg type= "PreProcessor" ref="PreProcessorToLower"/>
    </bean>

    <bean id="RendererStandardImplToUpper" class="edu.school21.renderer.RendererStandardImpl">
        <constructor-arg type= "PreProcessor" ref="PreProcessorToUpper"/>
    </bean>


    <bean id ="printerWithPrefix" class ="edu.school21.printer.PrinterWithPrefixImpl">
        <constructor-arg type="Renderer" ref ="RendererStandardImplToUpper"/>
        <property name="prefix" value="gogag "/>
    </bean>

    <bean id="printerWithPrefixErr" class="edu.school21.printer.PrinterWithPrefixImpl">
        <constructor-arg type="Renderer" ref="RendererErrImplToLower"/>
        <property name="prefix" value="pPe"/>
    </bean>

    <bean id="PrinterWithDateImpl" class="edu.school21.printer.PrinterWithDateTimeImpl">
        <constructor-arg type="Renderer" ref ="RendererStandardImplToUpper"/>

    </bean>
</beans>
